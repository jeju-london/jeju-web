                $(this).html(html);

                var centerCoord = $(this).data('centercoord');
                console.log(centerCoord);
                panTo(centerCoord.x, centerCoord.y, centerCoord.level);
            });
        }

        function initEvent() {
            initEventDepth1List();
        }


        var color = {
            east: {
                strokeColor: '#39DE2A',
                fillColor: '#A2FF99'
            },
            west: {
                strokeColor: '#c46b05',
                fillColor: '#f98500'
            },
            south: {
                strokeColor: '#FF8AEF',
                fillColor: '#FF8AEF'
