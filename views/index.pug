                }else{
                    $wrapDepth2.addClass('hide');
                }

                $wrapDepth2.find('button.btn-depth2').html('경기장<span class="caret"></span>');

                var centerCoord = $(this).data('centercoord');
                panTo(centerCoord.x, centerCoord.y, centerCoord.level);

